	</div>

	<div class="input-group">
		<%= f.label :last_name, 'Last name' %>
		<%= f.text_field :last_name, :class => 'form-control' %>
	</div>

	<div class="input-group">
		<%= f.label :unit_number, 'Unit number' %>
		<%= f.text_field :unit_number, :class => 'form-control' %>
