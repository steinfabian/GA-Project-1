<h2>Hi <%= @customer.first_name %>!</h2>

<h3>These are your account details:</h3>

<label class="checkout_label">Customer number:</label> <%= @customer.id %></p>
<label class="checkout_label">First name:</label> <%= @customer.first_name %></p>
<label class="checkout_label">Last name:</label> <%= @customer.last_name %></p>
<label class="checkout_label">Email:</label> <%= @customer.email %></p>
<label class="checkout_label">Unit number:</label> <%= @customer.unit_number %></p>
<label class="checkout_label">Street number:</label> <%= @customer.street_number %></p>
<label class="checkout_label">Street name:</label> <%= @customer.street_name %></p>
<label class="checkout_label">Suburb:</label> <%= @customer.suburb%></p>
<label class="checkout_label">Postcode:</label> <%= @customer.postcode%></p>

<%= link_to 'Edit', edit_path(@customer), :class => "help-block" %>

<h3>These are your past orders:</h3>
<!-- List orders. Find orders with this customer ID and display Order ID, date, and order specifications-->

<table class="table">
  <tr>
    <th>Order number</th>
    <th>Date</th>
    <th>Product</th>
    <th>Top Size</th>
    <th>Top Style</th>
    <th>Bottom Size</th>
    <th>Bottom Style</th>
  </tr>
  <% @order_list.each do |order| %>
    <tr>
    <th><%= order.id %></th>
    <th><%= order.created_at.strftime('%d %B %Y') %></th>
    <th><%= order.products.first.product_name %></th>
    <th><%= order.top_size%> </th>
    <th><%= order.top_colour%> </th>
    <th><%= order.bottom_size%> </th>
    <th><%= order.bottom_colour%> </th>
  <%end%>
  </tr>
</table>



